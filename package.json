{
  "name": "botc-bot",
  "version": "1.0.0",
  "description": "A discord bot for Blood on the Clocktower",
  "main": "src/bot.ts",
  "author": "vstumpf",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "4.12.0",
    "discord.js": "^14.8.0",
    "dotenv": "^16.0.3",
    "tslog": "^4.8.2"
  },
  "devDependencies": {
    "@types/node": "^18.15.10",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "prisma": "^4.12.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "scripts": {
    "update-commands": "node ./build/bin/deploy-commands.js",
    "build": "rm -rf build && tsc",
    "dev": "ts-node src/bot.ts",
    "start": "nodemon --exec ts-node --loader ts-node/esm/transpile-only src/bot.ts",
    "serve": "node build/bot.js",
    "lint": "eslint .",
    "prod": "yarn update-commands && yarn serve"
  }
}
